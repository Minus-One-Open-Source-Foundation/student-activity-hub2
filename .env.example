# Student Activity Hub - Environment Variables Template
# Copy this file to .env.development or .env.production and update the values

# ============================================================================
# API Configuration (Required)
# ============================================================================

# Backend API URL
# Development: http://localhost:8058/api
# Production: https://api.yourdomain.com/api
VITE_API_URL=http://localhost:8058/api

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable debug mode (logs API calls and responses)
VITE_ENABLE_DEBUG=true

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# ============================================================================
# Application Settings (Optional)
# ============================================================================

# Application name
VITE_APP_NAME=Student Activity Hub

# Application version
VITE_APP_VERSION=1.0.0

# Environment name (development, staging, production)
VITE_ENV=development

# ============================================================================
# Additional Configuration (Optional)
# ============================================================================

# Maximum file upload size (in MB)
VITE_MAX_FILE_SIZE=10

# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=30

# ============================================================================
# Notes:
# - All environment variables for Vite must be prefixed with VITE_
# - Changes to .env files require restarting the dev server
# - Never commit .env files with real credentials to version control
# - Use .env.development for local development
# - Use .env.production for production builds
# ============================================================================
